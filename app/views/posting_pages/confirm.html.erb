<h1>確認画面</h1>
<%= form_with(model: @posting_page, url: posting_pages_path, local: true) do |form| %>
  <%= form.hidden_field :content %>
  <p>Content: <%= @posting_page.content %></p>
  <p>Image: <%= image_tag(@posting_page.image.url) if @posting_page.image && @posting_page.image.url %></p>
  <%= form.hidden_field :image_cache %>
  <%= form.submit "投稿する" %>
<% end %>
<%= form_with(model:@posting_page, url:new_posting_page_path, local:true, method:"get") do |form| %>
  <%= form.hidden_field :image_cache %>
  <%= form.submit "戻る", name: "back" %>
<% end %>
